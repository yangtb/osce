<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.osce.orm.biz.training.structure.grade.PfGradeDao">
    <insert id="addGrade" useGeneratedKeys="true" keyProperty="idGrade">
        INSERT INTO org_grade
        (
        <trim suffixOverrides=",">
            <if test="idGrade!=null">
                id_grade,
            </if>
            <if test="idOrg!=null">
                id_org,
            </if>
            <if test="naGrade!=null">
                na_grade,
            </if>
            <if test="desGrade!=null">
                des_grade,
            </if>
            <if test="fgActive!=null">
                fg_active,
            </if>
            <if test="fgValid!=null">
                fg_valid,
            </if>
            <if test="creator!=null">
                creator,
            </if>
            <if test="sort!=null">
                sort,
            </if>
                gmt_create,
            <if test="operator!=null">
                operator,
            </if>
                gmt_modify,
        </trim>
        )
        VALUES
        (
        <trim suffixOverrides=",">
            <if test="idGrade!=null">
                #{idGrade},
            </if>
            <if test="idOrg!=null">
                #{idOrg},
            </if>
            <if test="naGrade!=null">
                #{naGrade},
            </if>
            <if test="desGrade!=null">
                #{desGrade},
            </if>
            <if test="fgActive!=null">
                #{fgActive},
            </if>
            <if test="fgValid!=null">
                #{fgValid},
            </if>
            <if test="creator!=null">
                #{creator},
            </if>
            <if test="sort!=null">
                #{sort},
            </if>
                now(),
            <if test="operator!=null">
                #{operator},
            </if>
                now(),
        </trim>
        )
    </insert>
    <update id="editGrade">
        UPDATE org_grade
        SET
        <trim suffixOverrides=",">
            <if test="idOrg!=null">
                id_org = #{idOrg},
            </if>
            <if test="naGrade != null and naGrade!=''">
                na_grade = #{naGrade},
            </if>
            <if test="desGrade != null and desGrade!=''">
                des_grade = #{desGrade},
            </if>
            <if test="fgActive != null and fgActive!=''">
                fg_active = #{fgActive},
            </if>
            <if test="fgValid != null and fgValid!=''">
                fg_valid = #{fgValid},
            </if>
            <if test="creator != null and creator!=''">
                creator = #{creator},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="gmtCreate != null">
                gmt_create = #{gmtCreate},
            </if>
            <if test="operator != null and operator!=''">
                operator = #{operator},
            </if>
            <if test="gmtModify != null">
                gmt_modify = #{gmtModify},
            </if>
        </trim>
        WHERE
            id_grade = #{idGrade}
    </update>
    <update id="delGrade">
        UPDATE org_grade
        SET
        <choose>
            <when test="operationType == 'updateStatus'">
                fg_active = #{status},
            </when>
            <otherwise>
                fg_valid = #{status},
                fg_active = '0',
            </otherwise>
        </choose>
            operator = #{operator},
            gmt_modify = now()
        WHERE
            id_grade in (
        <foreach collection="list" item="item" separator="," >
            #{item}
        </foreach>
        )
    </update>
    <update id="updateOtherGrade">
        UPDATE
            org_grade
        SET
            fg_active = '0'
        WHERE
            id_org = #{idOrg}
        and id_grade != #{idGrade}
    </update>


    <select id="listGrades" resultType="com.osce.vo.biz.training.structure.grade.GradeVo">
        SELECT
            id_grade ,
            na_grade ,
            des_grade ,
            gmt_create ,
            fg_active ,
            (
                SELECT
                    COUNT(1)
                FROM
                    org_depart od
                WHERE
                    og.id_grade = od.id_grade
                AND od.sd_depart_ca = '3'
                AND od.fg_active = '1'
                AND od.fg_valid = '0'
            ) AS gradeNum ,
            (
                SELECT
                    COUNT(1)
                FROM
                    org_student_depart osd
                INNER JOIN user_info ui ON ui.user_id = osd.id_user
                WHERE
                    og.id_grade = osd.id_grade
            ) AS studentNum
        FROM
            org_grade og
        WHERE
            fg_valid = '0'
        AND id_org = #{idOrg}
        <if test="naGrade != null and naGrade != '' ">
            and na_grade like concat('%',#{naGrade},'%')
        </if>
        limit #{offset}, #{limit}
    </select>

    <select id="countGrade" resultType="java.lang.Long">
        SELECT
            count(1)
        FROM
            org_grade
        WHERE
            fg_valid = '0'
        AND id_org = #{idOrg}
        <if test="naGrade != null and naGrade != '' ">
            and na_grade like concat('%',#{naGrade},'%')
        </if>
    </select>



</mapper>