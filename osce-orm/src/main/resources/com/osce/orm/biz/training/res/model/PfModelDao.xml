    <select id="listModels" resultType="com.osce.entity.ErpDevice">
        SELECT
            id_device ,
            id_org ,
            na_device ,
            des_device ,
            sd_device_unit ,
            fg_consumables ,
            IF( fg_consumables = 1 ,
                num_warn,
                (select count(1) from erp_device_case where id_device = erp_device.id_device and fg_valid = '0')
            ) num_warn ,
            unm_stock ,
            fg_active ,
            fg_valid ,
            sort ,
            creator ,
            gmt_create ,
            operator ,
            gmt_modify
        FROM
            erp_device
        WHERE
            id_org = #{idOrg}
        AND fg_valid = '0'
        <if test="naDevice != null and naDevice != '' ">
            and na_device like concat('%',#{naDevice},'%')
        </if>
        limit #{offset}, #{limit}
    </select>
