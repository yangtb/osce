    <delete id="delItem">
        UPDATE ibm_item_store
        SET
        <choose>
            <when test="operationType == 'updateStatus'">
                fg_active = #{status},
            </when>
            <otherwise>
                fg_valid = #{status},
                fg_active = '0',
            </otherwise>
        </choose>
        operator = #{operator},
        gmt_modify = now()
        WHERE
        id_item_store in (
        <foreach collection="list" item="item" separator=",">
            #{item}
        </foreach>
        )
    </delete>
