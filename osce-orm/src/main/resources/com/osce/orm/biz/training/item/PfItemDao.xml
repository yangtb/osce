    <select id="listItem" resultType="com.osce.entity.IbmItemStore">
        SELECT
        a.id_item_store ,
        a.id_org ,
        a.na_item_store ,
        a.des_item_store ,
        a.fg_active ,
        a.fg_valid ,
        a.sort ,
        a.creator ,
        a.gmt_create ,
        a.operator ,
        a.gmt_modify ,
        (
        SELECT
        count(1)
        FROM
        ibm_item b
        WHERE
        a.id_item_store = b.id_item_store
        AND b.fg_valid = '0'
        ) as itemNum
        FROM
        ibm_item_store a
        WHERE
        a.id_org = #{idOrg}
        AND a.fg_valid = '0'
        <if test="naItemStore != null and naItemStore != ''">
            AND a.na_item_store LIKE concat('%', #{naItemStore},'%')
        </if>
        limit #{offset}, #{limit}
    </select>
    <select id="countItem" resultType="java.lang.Long">
        SELECT
        count(1)
        FROM
        ibm_item_store
        WHERE
        id_org = #{idOrg}
        AND fg_valid = '0'
        <if test="naItemStore != null and naItemStore != ''">
            AND na_item_store LIKE concat('%', #{naItemStore},'%')
        </if>
    </select>
    <select id="listSection" resultType="com.osce.entity.IbmItemSection">
