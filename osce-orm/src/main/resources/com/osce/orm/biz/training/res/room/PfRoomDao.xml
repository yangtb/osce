    <update id="editRoom">
        UPDATE erp_room
        SET
        <trim suffixOverrides=",">
            <if test="idOrg != null">
                id_org = #{idOrg},
            </if>
            <if test="naRoom != null and naRoom!=''">
                na_room = #{naRoom},
            </if>
            <if test="desRoom != null and desRoom!=''">
                des_room = #{desRoom},
            </if>
            <if test="picRoom != null and picRoom!=''">
                pic_room = #{picRoom},
            </if>
            <if test="fgActive != null and fgActive!=''">
                fg_active = #{fgActive},
            </if>
            <if test="roomFlag!=null and roomFlag!=''">
                room_flag = #{roomFlag},
            </if>
            <if test="fgValid != null and fgValid!=''">
                fg_valid = #{fgValid},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="creator != null and creator!=''">
                creator = #{creator},
            </if>
            <if test="operator != null and operator!=''">
                operator = #{operator},
            </if>
                gmt_modify = now()
        </trim>
        WHERE
            id_room = #{idRoom}
    </update>
    <update id="delRoom">
        UPDATE erp_room
        SET
        <choose>
            <when test="operationType == 'updateStatus'">
                fg_active = #{status},
            </when>
            <otherwise>
                fg_valid = #{status},
                fg_active = '0',
            </otherwise>
        </choose>
            operator = #{operator},
            gmt_modify = now()
        WHERE
            id_room in (
        <foreach collection="list" item="item" separator="," >
            #{item}
        </foreach>
        )
    </update>
