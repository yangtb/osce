    <select id="selectRoom" resultType="com.osce.entity.ErpRoom">
        SELECT
            a.id_room ,
            a.id_org ,
            a.na_room ,
            a.des_room ,
            a.pic_room ,
            a.fg_active ,
            a.room_flag ,
            a.fg_valid ,
            a.sort ,
            a.creator ,
            a.gmt_create ,
            a.operator ,
            a.gmt_modify
        FROM
            erp_room a
        WHERE
            a.id_org = #{idOrg}
        AND a.id_room = #{idRoom}
    </select>

    <select id="listRooms" resultType="com.osce.entity.ErpRoom">
        SELECT
            a.id_room ,
            a.id_org ,
            a.na_room ,
            a.des_room ,
            a.pic_room ,
            a.fg_active ,
            a.room_flag ,
            a.fg_valid ,
            a.sort ,
            a.creator ,
            a.gmt_create ,
            a.operator ,
            a.gmt_modify ,
            count(b.id_room_device) AS deviceNum
        FROM
            erp_room a
        LEFT JOIN erp_room_device b ON a.id_room = b.id_room
        WHERE
            a.id_org = #{idOrg}
        AND a.fg_valid = '0'
        GROUP BY
            a.id_room ,
            a.id_org ,
            a.na_room ,
            a.des_room ,
            a.pic_room ,
            a.fg_active ,
            a.fg_valid ,
            a.sort ,
            a.creator ,
            a.gmt_create ,
            a.operator ,
            a.gmt_modify
        limit #{offset}, #{limit}
    </select>

    <select id="countRoom" resultType="java.lang.Long">
        SELECT
            count(1)
        FROM
            erp_room
        WHERE
            id_org = #{idOrg}
        AND fg_valid = '0'
    </select>
    <select id="isExistRoom" resultType="java.lang.Boolean">
        SELECT
            count(1)
        FROM
            erp_room
        WHERE
